# Server Environment Configuration
# Copy this file to .env and update the values

# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3500

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sportapp
DB_USER=sportapp_user
DB_PASSWORD=your_secure_password_here
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_IDLE=1000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_very_long_random_jwt_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGINS=http://localhost:8081,http://10.0.2.2:8081,http://localhost:8088

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# External Services
AI_API_KEY=your-ai-api-key
WEARABLE_API_KEY=your-wearable-api-key

# Monitoring
LOG_LEVEL=info
LOG_FILE=./logs/app.log