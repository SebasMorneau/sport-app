# SportApp Environment Configuration
# Copy this file to .env and fill in your values

# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=3500

# ===== DATABASE CONFIGURATION =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sportapp
DB_USER=sportapp_user
DB_PASSWORD=your_secure_database_password

# ===== REDIS CONFIGURATION =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_needed

# ===== JWT CONFIGURATION =====
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_different_from_jwt
JWT_REFRESH_EXPIRES_IN=30d

# ===== SECURITY CONFIGURATION =====
BCRYPT_ROUNDS=12

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://localhost:8081,http://localhost:19006

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info

# ===== MOBILE APP CONFIGURATION =====
API_URL=http://localhost:3500/api